#ifndef serviceH
#define serviceH

#ifdef BUILD_DLL
    #define DLL_EXPORT __declspec(dllexport)
#else
    #define DLL_EXPORT __declspec(dllimport)
#endif

#ifdef __cplusplus
extern "C"
{
#endif

DLL_EXPORT void ewCreateForm(void *p);

#ifdef __cplusplus
}
#endif

enum eWndType
	{
	  eForm = 0,
	  eButton = 1,
	  eEdit = 2,
	  eLabel = 3
    };

class EWndLink
{
  public:
	EWndLink(UINT id, UINT type, TObject *ptr)
	{
	  ewID = id;
      ewType = type;
	  ewPtr = ptr;
	}
	virtual ~EWndLink(){delete ewPtr; ewPtr = NULL;}

  private:
	UINT ewID;     //внутренний дескриптор ELI
	UINT ewType;   //тип окна (форма, кнопка и т.п.)
	TObject *ewPtr;  //указатель на объект
};

#endif
