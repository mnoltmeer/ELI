#ifndef serviceH
#define serviceH

#ifdef BUILD_DLL
    #define DLL_EXPORT __declspec(dllexport)
#else
    #define DLL_EXPORT __declspec(dllimport)
#endif

enum eWndType
	{
	  eForm = 0,
	  eButton = 1,
	  eEdit = 2,
	  eLabel = 3
    };

class EWndLink
{
  public:
	EWndLink(UINT id, TObject *ptr){ewID = id; ewPtr = ptr;}
	virtual ~EWndLink(){delete ewPtr; ewPtr = NULL;}

  private:
	UINT ewID;     //внутренний дескриптор ELI
	UINT ewType;   //тип окна (форма, кнопка и т.п.)
	TObject *ewPtr;  //указатель на объект
};

#ifdef __cplusplus
extern "C"
{
#endif

void DLL_EXPORT eIsStrNum(void *p);
void DLL_EXPORT eGetCurrDateToStr(void *p);
void DLL_EXPORT eGetCurrTimeToStr(void *p);
void DLL_EXPORT eParseString(void *p);

#ifdef __cplusplus
}
#endif

#endif
